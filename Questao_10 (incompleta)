#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define TAM 7
int main() {
    int *x = (int *)malloc(TAM * sizeof(int));
    int *f = (int *)malloc(TAM * sizeof(int));
    int cont;
    srand(time(NULL));
    for(int i = 0; i<TAM;i++){
        x[i] = rand() % TAM;
    }
    for(int i = 0; i<TAM;i++){
        printf("|%d|",x[i]);
    }
    for(int i = 0;i<TAM-1;i++){
        if(x[i] == x[i+1]){
            cont++;
        }
    }
    return 0;
}
